<%- include('../partials/header') %>

<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
        <div class="row mb-3">
          <label for="inputRecipeName" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="inputRecipeName" value="<%= recipe.name %>">
          </div>
        </div>
        <div class="row mb-3">
          <label for="inputRecipeIMG" class="col-sm-2 col-form-label">Image</label>
          <div class="col-sm-10">
            <input type="text" name="imgURL" class="form-control" id="inputRecipeIMG" value="<%= recipe.imgURL %>">
          </div>
        </div>
        <div class="row mb-3">
            <label for="inputRecipeIngredients" class="col-sm-2 col-form-label">Ingredients</label>
            <div class="col-sm-10">
              <input type="text" name="ingredients" class="form-control" id="inputRecipeIngredients" value="<%= recipe.ingredients %>">
            </div>
          </div>
        <div class="row mb-3">
            <label for="inputRecipeDirections" class="col-sm-2 col-form-label">Directions</label>
            <div class="col-sm-10">
              <input type="text" name="directions" class="form-control" id="inputRecipeDirections" value="<%= recipe.directions %>">
            </div>
        </div>
        <div class="row mb-3">
          <label for="inputRecipeCategories" class="col-sm-2 col-form-label">Categories</label>
          <div class="col-sm-10">
            <input type="text" name="categories" class="form-control" id="inputRecipeCategories" value="<%= recipe.categories %>">
          </div>
      </div>
        <div class="d-grid justify-content-center">
            <button type="submit" class="btn btn-primary">Save Recipe</button>
        </div>
</form>

<%- include('../partials/footer') %>