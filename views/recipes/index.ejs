<!<%- include('../partials/header') %>

<body>
    <h1>RECIPES</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Directions</th>    
                <th>Ingredients</th>     
            </tr>
        </thead>
        <tbody>
            <% recipes.forEach(function(r) { %> 
            <tr>
                <td><%= r.name %></td> 
                <td><%= r.image %></td> 
                <td><%= r.directions %></td> 
                <td><%= r.categories %></td> 
                <td><%= r.ingredients %></td> 
                <td><a href="/recipes/<%= r.id %>">View this Recipe</td> 

            </tr>
            <% }) %>     
        </tbody> 
    </table>
</body>
</html>

