<%- include('./partials/header') %>

<div class="about-container">
  <h5 id="about-welcome">Welcome to <%= title %>!</h5>
  <p id="about-paragraph">This is dedicated to my "Anne" - the turkish word for mother. I created this website so my older sisters and I can have easy access to our mother's amazing Uzbek recipes.  It is also available for anyone who loves Anne's cooking as much as we do or for anyone who wants to try making an Uzbek dish for themselves!</p> 
</div>

  <div class = "card-container">
    <% recipes.forEach(function(r) { %> 
      <a href="/recipes/<%= r.id %>" class="img-link">
        <div class="card"><img src="<%= r.imgURL%>" class="img-card"></div>
      </a>
    <% }) %>     
  </div>

  <div class = "categories-container">
    <h2>Categories:</h2>
    <% recipes.forEach(function(r) { %> 
      <div class="card-deck">
        <% r.categories.forEach(function(category) { %>
          <div class="card">
            <div class="card-body">
              <a href="/categories/<%= category %>"><%= category %></a>
            </div>
          </div>
        <% }) %>
      </div>
    <% }) %>
  </div>

<%- include('./partials/footer') %>